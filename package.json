{
  "name": "pnpmc",
  "description": "pnpm catalogs tooling",
  "version": "0.0.0",
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/pnpmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/pnpmc.git"
  },
  "keywords": [
    "pnpm",
    "catalogs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">= 18.18"
  },
  "bin": {
    "pnpmc": "./bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -p .",
    "changelog": "gh-changelogen --repo=kazupon/eslint-config",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "dev:eslint": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "fix": "pnpm run --parallel /^fix:/",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier . --write",
    "lint": "pnpm run --parallel /^lint:/",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "test": "echo 'test!'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@kazupon/eslint-config": "^0.19.0",
    "@kazupon/prettier-config": "^0.1.1",
    "@types/node": "^22.12.0",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsonc": "^2.19.1",
    "gh-changelogen": "^0.2.8",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc,json5,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
