{
  "name": "pnpmc-show",
  "description": "PNPM Catalogs Tooling - show command",
  "version": "0.13.2",
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/pnpmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/pnpmc.git",
    "directory": "packages/pnpmc-show"
  },
  "keywords": [
    "pnpm",
    "pnpmc",
    "catalogs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 20"
  },
  "type": "module",
  "bin": {
    "pnpmc-show": "./bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "module": "lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./meta": {
      "types": "./lib/meta.d.ts",
      "import": "./lib/meta.js",
      "require": "./lib/meta.js",
      "default": "./lib/meta.js"
    },
    "./runner": {
      "types": "./lib/runner.d.ts",
      "import": "./lib/runner.js",
      "require": "./lib/runner.js",
      "default": "./lib/runner.js"
    },
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./lib/*",
        "./*"
      ]
    }
  },
  "scripts": {
    "build": "tsdown",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@pnpm/constants": "^1001.1.0",
    "@pnpm/find-workspace-dir": "^1000.1.0",
    "@pnpm/logger": "^1001.0.0",
    "@pnpm/workspace.find-packages": "^1000.0.23",
    "@pnpm/workspace.read-manifest": "^1000.1.4",
    "gunshi": "^0.19.0"
  },
  "devDependencies": {
    "pnpmc-utils": "workspace:*",
    "tsdown": "^0.11.0"
  }
}
